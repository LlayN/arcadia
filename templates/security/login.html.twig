{% extends 'base.html.twig' %}

{% block title %}
    Connexion
{% endblock %}

{% block body %}
    <div class="container-fluid position-relative p-0"> 
        <img src="{{ asset("uploads/dev/img/login/background.jpg") }}" alt="" class="img-box position-absolute brightness-65">
            <section class="container hero-home d-flex justify-content-center align-items-center">
        <div class="row w-100 justify-content-center z-1000 position-relative">
            <div class="col-lg-7 col-sm-10 col-12">
                <form action="" method="post" class="">
                    {% if error %}
                        <div class="alert alert-danger">
                            <p class="fw-semibold m-0">
                                Identifiant ou mot de passe incorrect.
                            </p>
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="d-flex flex-column gap-4 p-4 back-login rounded-3">
                            Vous êtes déjà connecté à : <span class="p-2 back-primary text-success rounded-2 fst-italic">
                                {{ app.user.userIdentifier }}
                            </span>

                            <div>
                                <a href="{{ path("app_logout") }}" class="d-flex p-1 back-secondary position-relative z-3 w-100">
                                    <button class="back-primary p-3 px-lg-5 border-0 w-100">
                                        <h6 class="text-white m-0">
                                            Déconnexion
                                        </h6>
                                    </button>
                                </a>
                            </div>
                        </div>

                        
                    {% else %}
                        <div class="d-flex flex-column gap-4 p-4 back-login rounded-3">
                            <div class="mb-3">
                                <h4 class="fw-semibold text-dark">
                                    Connexion
                                </h4>
                                <span class="line-banner back-secondary"></span>
                            </div>
                            <div>
                                <label for="username" class="mb-2">
                                    Nom d'utilisateur
                                </label>
                                <input type="text"
                                    value="{{ last_username }}"
                                    name="_username"
                                    id="username"
                                    class="form-control"
                                    autocomplete="username"
                                    required
                                    autofocus />
                            </div>
                            <div>
                                <label for="password" class="mb-2">Mot de passe</label>
                                <input type="password"
                                    name="_password"
                                    id="password"
                                    class="form-control"
                                    autocomplete="current-password"
                                    required />

                                <input type="hidden"
                                    name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}" />
                            </div>

                            <div class="d-flex p-1 background-button"
                                type="submit">
                                <a href="" class="d-flex p-1 back-secondary position-relative z-3 w-100">
                                    <button class="back-primary p-3 px-lg-5 border-0 w-100">
                                        <h6 class="text-white m-0">
                                            Connexion
                                        </h6>
                                    </button>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </form>
            </div>
        </div>
    </section>
    </div>

{% endblock %}

